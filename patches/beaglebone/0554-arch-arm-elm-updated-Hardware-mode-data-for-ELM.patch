+	.user		= OCP_USER_MPU,
+};
+
+static struct omap_hwmod_ocp_if *am33xx_elm_slaves[] = {
+	&am33xx_l4_core__elm,
 };
 
 /* elm */
 static struct omap_hwmod am33xx_elm_hwmod = {
